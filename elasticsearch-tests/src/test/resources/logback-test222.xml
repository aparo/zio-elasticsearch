<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>target/elasticsearch.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{ISO8601} %-5level [%thread] [%logger{36}]  %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="FILE" />
    </root>
</configuration>